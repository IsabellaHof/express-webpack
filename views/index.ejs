<!DOCTYPE html>
<html>
  <head>
    <title>ToDo-Liste</title>
    <link rel='stylesheet' href='css/styles.css' />
  </head>
  <body>
    <section>
      <h1>ToDo-Liste</h1>
      <form action="/contacts" method="POST">
        <input type="text" name="todo" placeholder="todo">
        <button>Add</button>
      </form>
      <div class="todos">       
          <% todos.forEach(todo => { %>
            <%= todo.text %>
          <% }) %>  
      </div>
    </section>
    <script src="/js/main.js"></script>
  </body>
</html>
